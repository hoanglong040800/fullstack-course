{{! }}
<div class="m-5">
    <h1>Courses Page</h1>
  <div class="row">
    {{#each courses}}
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <a href="/courses/{{this.slug}}">
          {{! BS4 card }}
          <div class="card m-3">
            <img class="card-img-top" src={{this.thumnail}} alt={{this.name}} />
            <div class="card-body">
              <h5 class="card-title">
                {{this.name}}
              </h5>
              <p class="card-text">
                {{this.description}}
              </p>
              <a href="/courses/{{this.slug}}" class="btn btn-primary">
                Explore
              </a>
            </div>
          </div>
          {{! BS4 card }}
        </a>
      </div>
    {{/each}}
  </div>
</div>