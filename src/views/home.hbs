{{! }}
<div class="m-5">
  <div class="row">
    {{#each courses}}
      <div class="col-sm-6 col-lg-3">
        <div class="card m-3" style="width: 18rem">
          <img
            class="card-img-top"
            src={{this.thumnail}}
            alt={{this.name}}
          />
          <div class="card-body">
            <h5 class="card-title">
              {{this.name}}
            </h5>
            <p class="card-text">
              {{this.description}}
            </p>
            <a href="" class="btn btn-primary">
              Explore
            </a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>