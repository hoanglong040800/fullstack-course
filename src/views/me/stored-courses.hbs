<div class="my-5 px-3">
  <div>
    <h1>
    My Courses ({{count}})
    </h1>

    <a href="/me/deleted/courses">My Deleted Courses ({{countDeleted}})</a>
  </div>

<form method="POST" action="/courses/handle-form-actions" id="form-multi-action">
  <div class="d-flex align-items-center m-5">
    <div class="form-control-sm">
      <input class="form-check-input" type="checkbox" id="checkbox-all">
      <label class="my-0">Select All</label>
    </div>

    <select class="form-control-sm mx-3 select-action" name="action">
      <option value="N/A">-- Select Action --</option>
      <option value="delete">Delete</option>
    </select>

    <button
      type="button"
      data-toggle="modal"
      data-target="#multiDeleteCourseModal" 
      class="btn btn-primary btn-action" 
      disabled="true"
    >
      Action
    </button>
  </div>

  
    <table class="table table-hover my-5">
      {{! TITLE }}
      <thead>
        <tr>
          <th scope="col">
          </th>
          <th scope="col">
            #
          </th>
          <th scope="col">
            {{{sortable 'name' _sort}}}
          </th>
          <th scope="col">
            {{{sortable 'description' _sort}}}
          </th>
          <th scope="col">
            {{{sortable 'createdAt' _sort}}}
          </th>
          <th scope="col">
            {{{sortable 'updatedAt' _sort}}}
          </th>
          <th scope="col"></th>
        </tr>
      </thead>
      
      {{! BODY }}
        <tbody>
          {{#each courses}}
          <tr>

            <td>
              <div class="form-control-sm">
                <input class="form-check-input checkbox-course" type="checkbox" name="courseIds[]" value="{{this._id}}">
                {{!-- Add [] to make sure always return array --}}
            </td>

            <th scope="row">
              {{sum @index 1}}
            </th>
            <td>
              {{this.name}}
            </td>
            <td>
              {{this.description}}
            </td>
            <td>
              {{this.createdAt}}
            </td>
            <td>
              {{this.updatedAt}}
            </td>
            <td>
              {{! EDIT }}
              <a href="/courses/{{this._id}}/edit">
                <i class="fas fa-pen icon"></i>
              </a>
              {{! DELETE }}
              <a
                data-toggle="modal"
                data-target="#deleteCourseModal"
                data-id={{this._id}}
                data-name="{{this.name}}"
              >
                <i class="fas fa-trash-alt icon"></i>
              </a>
            </td>
          </tr>
          
          {{else}}
          <tr>
            <td colspan='6' style="text-align: center;">
              No course to show.
              <a href="/courses/create"> Click me to create new course</a>
              </td>
          </tr>

          {{/each}}
        </tbody>
      {{!  }}
    </table>
    </form>
</div>



{{! MODAL CONFIRM DELETE }}
